<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/hobby_name_item"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="test"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignBottom="@+id/image_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/totalscore_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="10"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/image_item"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        />

    <ImageButton
        android:id="@+id/image_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white_a0"
        android:focusable="false"/> <!--阻止子项获得焦点，让ListView的onItemClickListener得以使用-->


</RelativeLayout>